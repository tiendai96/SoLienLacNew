<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="45dp"
            android:padding="7dp"
            app:srcCompat="@drawable/ic_mail_close"
            android:id="@+id/imgTrangthaiTinnhan" />

        <TableLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="Tin thông báo"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewTieudeTinnhan"
                    android:textColor="@android:color/holo_green_dark"
                    android:textAllCaps="false" />

                <TextView
                    android:text="15:00 11/11/2016"
                    android:textAlignment="textEnd"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:id="@+id/txtNgaynhanTinNhan"
                    android:layout_weight="0.11"
                    android:textSize="12sp"
                    android:textStyle="normal|italic" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="đây là nội dung của tin nhắn ahihi"
                    android:paddingLeft="10dp"
                    android:layout_span="2"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/txtNoidungTinnhan"
                    android:layout_weight="0.11" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

</LinearLayout>